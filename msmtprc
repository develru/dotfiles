# Set default values for all following accounts.
defaults
auth           on
tls            on
tls_trust_file /var/lib/ca-certificates/ca-bundle.pem
logfile        ~/.msmtp.log

# Gmail
account        gmail
host           smtp.gmail.com
port           587
from richard.schwalk@gmail.com
user richard.schwalk@gmail.com
passwordeval    "gpg --quiet --for-your-eyes-only --no-tty --decrypt ~/.gmail.gpg"

# Set a default account
account default : gmail

